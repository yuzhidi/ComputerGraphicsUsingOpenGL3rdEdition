def wallsection {
	! put in a tall rectagular strip
	push scale 2 4 1
	cube
	pop

	! translate 2 in the x direction
	push
	translate 3 -2 0
	push
	scale 1 2 1
	cube
	pop

	! translate 4 in the y direction (up)
	push translate 0 5 0 
	cube
	pop

	! translate over another 2 and 
	! then push the scale to stretch the cube
	translate 3 2 0
	push scale 2 4 1
	cube
	pop
	pop
}

def halfWallSection {
	! put in a tall rectagular strip
	push 
	scale 1 2 1
	cube
	pop

	! translate 2 in the x direction
	push
	translate 3 -2 0
	push
	cube
	pop

}


def tallwallsection {
	push 
	use wallsection
	translate 0 8 0
	use wallsection
	pop
}

def longWall {
	push

	use wallsection
	translate 8 0 0
	use wallsection
	!translate 8 0 0
	!use wallsection
	pop
}

def longTallWall {
	push
	use tallwallsection
	translate 8 0 0
	use tallwallsection
	!translate 8 0 0
	!use tallwallsection
	pop
}

def longWallPerimeter {
	push
	use longWall

	push
	rotate 90 0 1 0 
	translate 3 0 -1
	use longWall
	pop

	push
	translate 24 0 0
	rotate 90 0 1 0 
	translate 3 0 -1
	use longWall
	pop

	push
	translate 0 0 -26
	use longWall
	pop
	pop
}

def tallWallPerimeter {
	push
	use longTallWall

	push
	rotate 90 0 1 0 
	translate 3 0 -1
	use longTallWall
	pop

	push
	translate 24 0 0
	rotate 90 0 1 0 
	translate 3 0 -1
	use longTallWall
	pop

	push
	translate 0 0 -26
	use longTallWall
	pop
	pop
}

